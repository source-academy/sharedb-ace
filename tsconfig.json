{
  "compilerOptions": {
    "lib": ["esnext"],
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["source"],
  "exclude": ["node_modules", "dist"]
}
